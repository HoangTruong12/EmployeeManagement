@model IEnumerable<Web.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
    <a asp-action="DownloadFormatExcel" asp-controller="Excel" class="btn btn-secondary" style="margin-left:20px;color:white;">Download Format Excel</a>
</p>

<form method="get" asp-controller="Employee" asp-action="Index">
    <p>
        <input 
               type="search"
               placeholder="Enter Employee ID"
               value="@ViewData["GetId"]"
               name="id"
               style="width:180px;"
               />

        <input type="search"
               placeholder="Enter Employee Name"
               value="@ViewData["GetName"]"
               name="name"
               style="width:200px;" 
               />
        <input type="submit" value="Search" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-dark">Reset</a>
    </p>
</form>

<table class="table" style="margin-top:25px">
    <thead>
        <tr style="background-color: #2B4865;color:white;">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red;">
                    No Match Any Document
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info fa fa-pencil" })*@

                        <a onclick="Delete(@item.Id)" class="btn btn-info" style="color:white;">@*<i class="fa fa-trash"></i>*@Delete</a>

                        @*@using (Html.BeginForm("Delete", "Employee", new { id = item.Id }, FormMethod.Post, false, new { onsubmit = "return comfirm('Are you sure you want to delete this?');" }))
                            {
                                @Html.AntiForgeryToken();
                                <input type = "submit" value = "Delete" />
                            }*@
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


