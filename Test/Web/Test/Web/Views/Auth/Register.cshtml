@model Web.Models.Employee
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="account text-center">
            <form asp-action="Register" asp-controller="Auth" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h3 class="mt-3">ĐĂNG KÝ</h3>
                <label style="color:red;">@TempData["SuccessMessage"]</label>
                <label style="color:red;">@TempData["FailMessage"]</label>
                <div>
                    <input type="text" asp-for="Username" name="Username" class="mb-1 form-control d-inline-block" placeholder="Username" />
                    <br />
                    <input type="password" asp-for="Password" name="Password" class="mb-1 form-control d-inline-block" placeholder="Password" />
                    <br />
                    <input type="text" asp-for="Name" name="Name" class="mb-1 form-control d-inline-block" placeholder="Name" />
                    <br />
                    <input type="text" asp-for="Email" name="Email" class="mb-1 form-control d-inline-block" placeholder="Email" />
                    <br />
                    <input type="text" asp-for="Birthday" name="Birthday" class="mb-1 form-control d-inline-block" placeholder="Birthday" />
                    <br />
                    <input type="text" asp-for="PhoneNumber" name="PhoneNumber" class="mb-1 form-control d-inline-block" placeholder="PhoneNumber" />
                </div>
                <div class="btn-submit">
                    <button class="btn btn-outline-primary mt-2" type="submit" value="Register">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage)
        });

    $(function () {
    var failMessage = '@TempData["FailMessage"]'
        if (failMessage != '')
            alertify.error(failMessage)
    });
    </script>
}
