
@{
    ViewData["Title"] = "Notification";
    Layout = null;
}

<h3>Notification</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-controller="Notification" onsubmit=" return ajaxSendNotificationToAll(this);" autocomplete="off">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <p>
                            Title 
                            <input type="text" name="Title" />
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <p>
                            Content
                            <input type="text" name="Content" />
                        </p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>